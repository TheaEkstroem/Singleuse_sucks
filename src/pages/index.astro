---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Plastikforurening from "../components/Plastikforurening.astro";
import Datavisualisering from "../components/Datavisualisering.astro";
import Nyhedsbrev from "../components/nyhedsbrev.astro";
import ProblemPlastik from "../components/ProblemPlastik.astro";
import Doner from "../components/donér.astro";
import Gode from "../components/goderåd.astro";
import statement from "../components/statement.astro";
import Statement from "../components/statement.astro";
import Procent from "../components/Procent.astro";
import TopTi from "../components/TopTi.astro";
---

<MainLayout title="Singleusesucks">
  <article class="">
    <!-- Hero -->
    <section
      class="relative flex flex-col items-center justify-center lg:h-[900px] h-[852px] lg:w-full"
    >
      <h1 text-lg>Det er sejt at bruge plastik flere gange</h1>
      <h2>#SingleUseSucks</h2>
      <Link variant="primary" size="large">Støt</Link>
    </section>

    <!-- Hvad er plastikforurening -->
    <section id="hvad-er-plastikforurening" class="my-1">
      <Plastikforurening />
    </section>

    <!-- Procent infografik med plastikforurening -->
    <Procent />
    <!-- Problemet med plastikforurening -->
    <ProblemPlastik />

    <!-- infografik, goderåd -->
    <Gode />

    <!-- Datavisualisering  -->
    <section>
      <Datavisualisering />
    </section>

    <!-- Top ti infografik  -->
    <TopTi />

    <!-- statement  -->
    <Statement />

    <!-- Donér  -->
    <Doner />

    <!-- TIlmeld  -->
    <section>
      <Nyhedsbrev />
    </section>
  </article>
</MainLayout>

<script>
      import { scroll, animate, inView } from "@motionone/dom";

  scroll(
	animate("#horisontalliste", {
		transform: ["none", "translateX(-500vw)"]
	}),
	{ target: document.querySelector("#horisontalscrollsection") }
	); 
</script>